  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const vpnStatus = document.getElementById('vpn-status');
      const connectBtn = document.getElementById('connect-btn');
      const disconnectBtn = document.getElementById('disconnect-btn');
      const serverSelect = document.getElementById('server-select');
      
      // Simulate VPN connection
      connectBtn.addEventListener('click', function() {
        const selectedCountry = serverSelect.options[serverSelect.selectedIndex].text;
        
        // Update status
        vpnStatus.textContent = `Connected to ${selectedCountry}`;
        vpnStatus.setAttribute('data-status', 'connected');
        
        // Toggle buttons
        connectBtn.disabled = true;
        disconnectBtn.disabled = false;
        
        // Simulate connection delay
        setTimeout(() => {
          alert(`Successfully connected to ${selectedCountry} server!`);
        }, 1000);
      });
      
      // Simulate VPN disconnection
      disconnectBtn.addEventListener('click', function() {
        // Update status
        vpnStatus.textContent = 'Disconnected';
        vpnStatus.setAttribute('data-status', 'disconnected');
        
        // Toggle buttons
        connectBtn.disabled = false;
        disconnectBtn.disabled = true;
        
        // Simulate disconnection delay
        setTimeout(() => {
          alert('Successfully disconnected from VPN!');
        }, 500);
      });
      
      // Additional feature: Show country flag emoji when selected
      serverSelect.addEventListener('change', function() {
        if (vpnStatus.getAttribute('data-status') === 'connected') {
          const selectedCountry = serverSelect.options[serverSelect.selectedIndex].text;
          vpnStatus.textContent = `Connected to ${selectedCountry}`;
        }
      });
    });
  </script>
